public class OthelloRunner
{
	public static void main(String[] args)
	{
	    PickLevels levels = new PickLevels();
	    levels.setSize( 400, 255 );
        levels.setVisible( true );
        
        String info = "";
        while( info.length() == 0 )
        info = levels.info();
        int i = info.indexOf( ", " );
        int i2 = info.indexOf( ",  " , i );
        OthelloGame game = new OthelloGame( true, info.substring(0, i ), info.substring( i, i2 ), info.substring( i2, info.length()-1 ));

        game.playGame();
//	    OthelloGame game = new OthelloGame( true, "Hard", "Charlie");
//	    game.playGame();
	}
}